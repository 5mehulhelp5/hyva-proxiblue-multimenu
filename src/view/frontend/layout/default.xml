<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="ProxiBlue_MultiMenu::css/menu.css" defer="defer"/>
    </head>
    <body>
        <referenceBlock name="topmenu_desktop">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">ProxiBlue_MultiMenu::html/header/menu/desktop.phtml
                </argument>
            </action>
            <block name="topmenu_multimenu_childitems" as="topmenu.childitems"
                   template="ProxiBlue_MultiMenu::html/header/menu/childitems.phtml" ttl="3600"/>
        </referenceBlock>
        <referenceBlock name="topmenu_mobile">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">ProxiBlue_MultiMenu::html/header/menu/mobile.phtml
                </argument>
            </action>
            <block name="topmenu_multimenu_childitems" as="topmenu.childitems"
                   template="ProxiBlue_MultiMenu::html/header/menu/childitems.phtml" ttl="3600"/>
        </referenceBlock>

    </body>
</page>
